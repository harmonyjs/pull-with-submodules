{
  "name": "pull-with-submodules",
  "version": "0.1.0",
  "description": "Opinionated Git pull utility for repositories with submodules - smart, fast, and zero-config",
  "keywords": [
    "git",
    "submodules",
    "pull"
  ],
  "homepage": "https://github.com/harmonyjs/pull-with-submodules",
  "bugs": {
    "url": "https://github.com/harmonyjs/pull-with-submodules/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/harmonyjs/pull-with-submodules.git"
  },
  "license": "MIT",
  "author": {
    "name": "Andrey Vavilov",
    "email": "a@vavilov.dev",
    "url": "https://vavilov.dev"
  },
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "pull-with-submodules": "./bin/pull.js"
  },
  "files": [
    "dist",
    "bin",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "clean": "rm -rf dist",
    "dev": "tsx src/cli.ts",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\"",
    "test": "tsx --test src/**/*.spec.ts",
    "typecheck": "tsc --noEmit",
    "verify": "npm run typecheck && npm run lint && npm run format:check && npm run test",
    "prepack": "npm run clean && npm run build",
    "prepublishOnly": "npm run verify"
  },
  "dependencies": {
    "@clack/prompts": "0.11.0",
    "cac": "^6.7.14",
    "debug": "4.4.3",
    "find-up-simple": "^1.0.1",
    "p-limit": "^7.1.1",
    "picocolors": "^1.1.1",
    "simple-git": "^3.28.0"
  },
  "devDependencies": {
    "@types/debug": "^4.1.12",
    "@types/node": "^24.5.0",
    "@typescript-eslint/eslint-plugin": "^8.44.0",
    "@typescript-eslint/parser": "^8.44.0",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "memfs": "^4.39.0",
    "np": "^10.2.0",
    "prettier": "^3.6.2",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=22.0.0",
    "npm": ">=10.0.0"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}
